@using App.Client.Infrastructure;
@implements IDialogContentComponent<GlobalState>
@inject IMessageService MessageService

<div>
    <FluentStack>
        <FluentSpacer />
        
        <FluentAnchor Appearance="@Appearance.Hypertext" Href="" @onclick="@(e => MessageService.Clear(ClientConstants.MESSAGES_NOTIFICATION_CENTER) )">
            Dismiss all
        </FluentAnchor>
    </FluentStack>

    <br />

    <FluentMessageBarContainer Section="@ClientConstants.MESSAGES_NOTIFICATION_CENTER" MaxMessageCount="-1" Type="@MessageType.Notification" />
    @* <FluentMessageBarProvider Section="@ClientConstants.MESSAGES_NOTIFICATION_CENTER" MaxMessageCount="-1" Type="@MessageType.Notification" /> *@
</div>

@code {
    [Parameter]
    public GlobalState Content { get; set; }
}